{
  "name": "node-service-starter",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "dev": "DOCKER_CMD=\"dumb-init npm run start\" docker-compose -f docker/docker-compose-dev.yml up",
    "dev:test": "DOCKER_CMD=\"dumb-init npm run test\" docker-compose -f docker/docker-compose-dev.yml up",
    "test": "npm run build && npm run test:ut && npm run test:e2e",
    "build": "if [ -d build ]; then rm -r build; fi; npm run build:server",
    "start": "npm run build && node server.js",
    "test:e2e": "ava --verbose build/**/*.e2e.js",
    "test:ut": "ava --verbose build/**/*.test.js",
    "build:server": "./node_modules/.bin/babel server --out-dir build --source-maps",
    "build:noremove": "npm run build:server",
    "dev:empty": "node scripts/docker-clear-storage",
    "dev:rebuild": "node scripts/docker-rebuild-application"
  },
  "license": "MIT",
  "dependencies": {
    "aliyun-oss-upload-stream": "^1.3.0",
    "aliyun-sdk": "^1.11.11",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.5",
    "dotenv": "^6.1.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "express-pino-logger": "^4.0.0",
    "helmet": "^3.14.0",
    "ioredis": "^4.2.0",
    "mime-types": "^2.1.21",
    "moment": "^2.22.2",
    "mongoose": "^5.3.9",
    "mysql2": "^1.6.3",
    "pino": "^5.8.0",
    "response-time": "^2.3.2",
    "sequelize": "^4.41.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "ava": "^1.0.0-rc.1",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.8.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "pino-pretty": "^2.2.3"
  }
}
